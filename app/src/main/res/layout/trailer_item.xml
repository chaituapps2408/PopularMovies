<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:minHeight="@dimen/trailer_icon_height"
    android:minWidth="@dimen/trailer_icon_width"
    android:orientation="vertical"
    app:cardElevation="@dimen/review_card_elevation">

    <ImageView
        android:id="@+id/trailerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:src="@drawable/loading_icon" />

    <ImageView
        android:id="@+id/trailerPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/play_trailer"
        android:scaleType="fitXY"
        android:src="@drawable/ic_play" />
</android.support.v7.widget.CardView>